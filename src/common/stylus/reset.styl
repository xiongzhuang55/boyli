reset()
  html
    box-sizing border-box
    border-collapse collapse
    line-height 1
    font-family sans-serif
  *
    margin 0
    padding 0
    border-collapse inherit

  *, *:before, *:after
    box-sizing inherit

  html,body
    height:100%
  body
    position relative

  [hidden]
    display none !important

  ul, ol, menu
    list-style none

  a
    color inherit
    text-decoration none

  fieldset
    border none
