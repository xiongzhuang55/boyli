
@import "mixi.styl"
@import 'reset.styl'
reset();
*
  margin 0
  padding 0
a
  text-decoration none
  color #000
ol
ul
  list-style none
input
textarea
  box-shadow none
  outline none
  border 1px solid #2CA2B4
  &:acitve
  &:focus
    appearance none
    border 1px solid #ccc
#app
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  max-width 470px
  font-family '微软雅黑'
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 20px /*no*/
  margin 0% auto
  overflow hidden

@media screen and (max-width 768px)
  #app
    max-width 100%
    border none
    .border-1px
      height 100%
      border none
    .tab
      height 64px
.border-1px
    height 100%
    border-left 1px solid #2CA2B4
    border-right 1px solid #2CA2B4
.backgroundColor
  background-color #2CA2B4
  color #fff
.app-wrapper
  height 100%
  background-color #f2f2f2
.app-content
  position absolute
  top 44px
  left 1px
  bottom 55px
  right 1px
  background-color #f2f2f2
  overflow-y auto
  ol
  ul
    background-color #fff
    li
      border-top 1px solid #ddd
      a
        display block
        padding-left 52px
        background-image url('./assets/images/check@2x.png')
        background-repeat no-repeat
        background-position 15px
        background-size 25px 25px
        line-height 45px
        background-color #fff
        font-size 16px
        cursor pointer
        &.ActiveLink
          background-image url('./assets/images/checked@2x.png')
          background-repeat no-repeat
          background-position 15px
          background-size 30px 30px
        &:hover
          background-color #86CBD6
          color #fff
  .app-list-placeholder
    padding 30px 0rem
    text-align center
    font-weight normal
    font-size 20px
.height100
  height 100%
